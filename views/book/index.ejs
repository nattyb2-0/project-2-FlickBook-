<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>

   <link rel="stylesheet" href="/book.css">
</head>
<body>
  <header>
    <h1>Welcome! <%= user.username %></h1>
  </header>
  <form action="/book" method="POST">
  <input type=text name="random user">
  <input type="submit" name="submit" value="search inmates">
</form>
    <div class=container>
        <div class='results'>
        <h2>Search Results:</h2>
          <% results.forEach((inmate) => { %>
          <div>
            <img src="<%= inmate.picture.medium %>" alt="">


            <p><%= inmate.registered %></p>

          <form action="/book/favorites" method="POST">
            <input type="hidden" name="favorite[picture]" value="<%= inmate.picture.medium %>">
            <input type="hidden" name="favorite[stateNumber]" value="<%= inmate.registered%>">
            <input type="submit" value="create">
          </form>
        </div>
         <% }) %>
         </div>

        <div class="fav">

            <h2>FAVORITES:</h2>

            <% for(let i = 0; i < favorites.length; i++){ %>
              <div>

                <img src="<%= favorites[i].picture %>" alt="" />
                <h4><%= favorites[i].stateNumber %></h4>

              <form class="" action="/book/favorites/<%= favorites._id %>?_method=DELETE" method="post">
                <input type="submit" name="name" value="Delete">
              </form>
              <form action="/book/favorites" method="POST">
                <input class="post" type="textarea" name="post" ></textarea>"
                <input type="hidden" name="favorite[post]" value="">
                <input type="submit" value="create post">
              </form>
            </div>
          <% }; %>
      </div>
      </div>
      </body>
      </html>



